{
    "name": "crosa7/leaf-omniglot",
    "description": "A Leaf module to add multi language capabilities to leaf applications",
    "keywords": [
        "translations",
        "localization",
        "multi-language",
        "i18n",
        "internationalization",
        "leaf",
        "php"
    ],
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "leafs/http": "^2.3|^3.0|^4.0",
        "leafs/session": "^2.0|^3.0|^4.0",
        "ext-json": "*"
    },
    "require-dev": {
        "pestphp/pest": "^1.0|^2.0",
        "mockery/mockery": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LeafOmniglot\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Andr√© Rosa",
            "email": "crosa7000@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
